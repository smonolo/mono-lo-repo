{
  "name": "mono-lo-repo",
  "version": "1.0.0",
  "author": "Stefano Monolo <stefano@smnl.dev>",
  "workspaces": [
    "apps/*"
  ],
  "packageManager": "npm@11.2.0",
  "scripts": {
    "format": "prettier . --write",
    "dev:website": "turbo dev --filter=website",
    "dev:resume": "turbo dev --filter=resume",
    "dev:cdn": "turbo dev --filter=cdn",
    "dev:mfd": "turbo dev --filter=mfd",
    "dev:cdn-ui": "turbo dev --filter=cdn-ui",
    "dev:site": "turbo dev --filter=site",
    "dev": "turbo dev",
    "build:website": "turbo build --filter=website",
    "build:resume": "turbo build --filter=resume",
    "build:dev": "turbo build --filter=cdn",
    "build:mfd": "turbo build --filter=mfd",
    "build:cdn-ui": "turbo build --filter=cdn-ui",
    "build:site": "turbo build --filter=site",
    "build": "turbo build"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.5.0"
  }
}
