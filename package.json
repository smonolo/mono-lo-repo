{
  "name": "mono-lo-repo",
  "version": "1.0.0",
  "author": "Stefano Monolo <stefano@smnl.dev>",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "format": "prettier . --write",
    "dev:website": " turbo build --filter=common && turbo dev --filter=website",
    "dev": "turbo build --filter=common && turbo dev",
    "build:website": "turbo build --filter=common && turbo build --filter=website",
    "build:common": "turbo build --filter=common",
    "build": "turbo build --filter=common && turbo build --filter=!common"
  },
  "devDependencies": {
    "prettier": "^3.2.5"
  }
}
